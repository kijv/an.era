{
  "name": "@repo/an.era",
  "workspaces": [
    "scripts",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check",
    "version": "changeset version && bun install --lockfile-only && curl -fsSL \"https://api.are.na/v3/openapi.json\" -o openapi.json && bun scripts/readme.ts > packages/an.era/readme.md && bun fmt packages/an.era/readme.md",
    "release": "turbo run build --filter=./packages/* && changeset publish",
    "gen": "bun scripts/openapi/gen.ts",
    "readme": "bun scripts/readme.ts"
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.41.0",
    "oxlint-tsgolint": "^0.11.2",
    "publint": "^0.3.17",
    "rolldown": "^1.0.0-rc.3",
    "tsdown": "^0.20.1",
    "turbo": "^2.8.1",
    "typescript": "^5"
  },
  "packageManager": "bun@1.3.8"
}
