{
  "name": "@repo/an.era",
  "workspaces": [
    "scripts",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check",
    "version": "changeset version && bun install --lockfile-only",
    "release": "turbo run build --filter=./packages/* && changeset publish",
    "gen": "bun scripts/openapi/gen.ts",
    "readme": "curl -fsSL \"https://api.are.na/v3/openapi.json\" -o openapi.json && bun scripts/readme.ts readme > readme.md && bun fmt readme.md"
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@typescript/native-preview": "^7.0.0-dev.20260214.1",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.41.0",
    "oxlint-tsgolint": "^0.11.2",
    "publint": "^0.3.17",
    "tsdown": "^0.20.3",
    "turbo": "^2.8.6",
    "typescript": "^5",
    "vite-tsconfig-paths": "^6.1.0",
    "vitest": "^4.0.18"
  },
  "packageManager": "bun@1.3.8"
}
